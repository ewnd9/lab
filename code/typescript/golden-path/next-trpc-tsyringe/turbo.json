{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "tsconfig.tsbuildinfo", ".turbo-docker/**"]
    },
    "typecheck": {
      "dependsOn": [],
      "outputs": []
    },
    "test": {
      "dependsOn": [],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "containerize": {
      "dependsOn": ["build", "^containerize"],
      "outputs": []
    }
  }
}

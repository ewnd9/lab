{
  "name": "instagram-saved-posts-scraper",
  "version": "1.0.0",
  "description": "Scrape Instagram saved posts and store them in PostgreSQL",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace web dev",
    "cli:scrape": "HEADLESS=false yarn workspace web cli scrape",
    "cli:upload": "yarn workspace web cli upload",
    "lint": "biome check ./ --write",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "prepare": "husky"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^22.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
